<!DOCTYPE html>
<html lang="en">

<% include partials/template/head.ejs %>
  <body id="index">
    <% include partials/template/navbar.ejs %>
    <div class="jumbotron">
      <h1 class="text-center">Simcha Fund</h1>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <% donorData.forEach(function(data) { %>
          <h1 class="well well-lg text-center"><%= data.name %> - Balance $<%= data.balance%><br/><button id="deleteDonorModal" type="button" class="btn btn-danger btn-xs">Delete</button></h1>
          <div id="donorId">
            <%= data.id %>
          </div>
          <div class="modal in deleteModal">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title text-center"><strong>Warning!</strong></h4>
                </div>
                <div class="modal-body">
                  <p class="text-center">Are you sure you want to delete <%= data.name %> <strong>permanently</strong>permanently?</p>
                  <div class="row">
                      <div class="col-12-xs text-center">
                          <button id="deleteDonor" class="btn btn-success btn-md">Yes</button>
                          <button id="modalNoButton" class="btn btn-danger btn-md">No</button>
                      </div>
                  </div>
                </div>
              </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
          </div><!-- /.modal -->
            <% }); %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-offset-4 col-md-6">
          <form class="form-inline" method="post">
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">$</div>
                <input type="text" name="amount" class="form-control" id="amount" placeholder="Amount" required>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        </div>
      </div>
      <br/>
      <div class="row">
        <div class="col-md-offset-5">
            <a href="/contributors"><button type="button" class="btn btn-primary">Go Back</button></a>
        </div>
      </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"
      crossorigin="anonymous"></script>
      <script src="/js/donor.js" charset="utf-8"></script>
  </body>

</html>
